#!/usr/bin/ruby

require 'rubygems'
require 'gtk2'
require 'git'
require 'time'

include FileUtils

$VERSION = '1.0.1 alpha'

BASE_DIR = File.expand_path(File.dirname(__FILE__))
NOTE_DIR = ENV['HOME'] + '/.notes'

Dir.glob("#{BASE_DIR}/libs/*.rb").each do |library|
  require library
end

puts "BASE_DIR = #{BASE_DIR}"
$git = Git.init NOTE_DIR
puts "Git repo initialized!"

Dir.chdir(NOTE_DIR)

Gtk.init
$window = Gitruno.new
Gtk.main
